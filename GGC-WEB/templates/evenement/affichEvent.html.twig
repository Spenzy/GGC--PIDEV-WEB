{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("css/event.css") }}" rel="stylesheet">
   
{% endblock %}

{% block body %}


<div class="container">
    <h1>Events</h1>
    <div class="row">
    {% for evenement in evenements %}
        <article class="card fl-left">
            <section class="date">
                <time datetime="23th feb">
                <span>{{ evenement.titre }}</span>
                </time>
            </section>
            <section class="card-cont ">
            <div class="d-flex justify-content-between">
                <div class="container-fluid">
                    <small></small>
                    <h3></h3>
                    <div class="even-date">
                    <i ></i>
                    <time>
                    <span >Date debut :  {{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : '' }}</span> 
                    <span >Date fin   :  {{ evenement.datefin ? evenement.datefin|date('Y-m-d') : '' }}</span>
                    </time>
                    </div>
                    
                    <span> Localisation : {{ evenement.localisation }}</span>
                    
            
                    <p>
                        Description :{{ evenement.description }}
                    </p>
                      
                </div>
                     <div class="container-fluid">
                        <img src="{{ asset('images/'~evenement.photo) }}" 
                            alt="  {{ evenement.photo }}" 
                            width="150" height="150">
                        <div >   
                        <a  href="{{ path('addParticipation',{'ref': evenement.reference }) }}">Participer</a>
                        </div>                   

                    </div>
                                         

                </div>
                
            </section>
            <div>
            
            <a  href="{{ path('evenementshow',{'reference': evenement.reference }) }}">details</a> 
            </div>
        </article>
        

        
    {% endfor %}
    <div class="d-flex justify-content-start">
                <a href="{{ path('affichEventPDF') }}" class=" btn btn-outline-primary"><i class="fa fa-download"></i> imprimer</a>      
                
    </div>
     <div class="row mt-n2 wow fadeInUp " data-wow-delay="0.1s" style="visibility: visible;animation-delay: 0.1s;animation-name: fadeInUp;" >
        <div class="col-12 text-center">
               <div class="btn px-3 pr-4 active mt-4">
                   {{ knp_pagination_render(evenements, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
               </div>
        </div>
    </div>
    
    
    </div>
    

</div>









