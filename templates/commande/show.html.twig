{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idcommande</th>
                <td>{{ commande.idcommande }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ commande.adresse }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ commande.prix }}</td>
            </tr>
            <tr>
                <th>Livree</th>
                <td>{{ commande.livree ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Datecommande</th>
                <td>{{ commande.datecommande ? commande.datecommande|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commande_index') }}">back to list</a>

    <a href="{{ path('app_commande_edit', {'idcommande': commande.idcommande}) }}">edit</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
