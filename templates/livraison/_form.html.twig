{% use "bootstrap_4_layout.html.twig" %}

<div class="col col-md-5">
        <div class="form-floating">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_label(form.idcommande,"Id Commande :") }}
                {{  form_widget(form.idcommande,{'attr':{'class':'form-control'}} ) }}
                {{ form_errors(form.idcommande) }}
                <br>

                {{ form_label(form.idlivreur,"Id Livreur :") }}
                {{ form_widget(form.idlivreur,{'attr':{'class':'form-control'}} ) }}
                {{ form_errors(form.idlivreur) }}
                <br>

                {{ form_label(form.dateheure,"Date :") }}
                {{ form_widget(form.dateheure,{'attr':{'class':'form-control'}} ) }}
                {{ form_errors(form.dateheure) }}

                <br>

            <button class="btn btn-primary w-25 ">{{ button_label|default('Ajouter') }}</button>
            {{ form_end(form) }}
        </div>
</div>