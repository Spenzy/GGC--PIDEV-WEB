{% extends 'admin/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <link href="{{ asset("css/archivage.css") }}" rel="stylesheet">
{% endblock %}

{% block title %}Archivage publication{% endblock %}

{% block body %}
    <div class="event-schedule-area-two bg-color pad100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="tab-content">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th class="text-center" scope="col">ID</th>
                                    <th scope="col">Auteur</th>
                                    <th scope="col">Publication</th>
                                    <th class="text-center" scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in publications %}
                                    <div class="tab-pane fade active show">
                                        {{ include('publication/pubadmin.html.twig') }}
                                    </div>
                                {% endfor %}
                                <div class="d-flex justify-content-center">
                                    {{ knp_pagination_render(publications, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
                                </div>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /col end-->
            </div>
            <!-- /row end-->
        </div>
    </div>
{% endblock %}
