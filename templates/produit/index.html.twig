{% extends 'admin/index.html.twig' %}
{% use "bootstrap_4_layout.html.twig" %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <a href="{{ path('app_produit_note',{'reference':0}) }}" class="btn btn-outline-dark">Note</a>

    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Libelle</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.note }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'reference': produit.reference}) }}" class="btn btn-outline-info">Consulter</a>
                    <a href="{{ path('app_produit_edit', {'reference': produit.reference}) }}" class="btn btn-outline-secondary">Modifier</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun produit trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary " href="{{ path('app_produit_new') }}">Ajouter un produit</a>
{% endblock %}
