{% extends 'admin/index.html.twig' %}
{% use "bootstrap_4_layout.html.twig" %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
        {% for client in clients %}
            <tr>
                <th> nom</th>
                <td>{{ client.idclient.nom }}</td>
             </tr>
             {% endfor %}
            <tr>
                <th>Nbravertissement</th>
                <td>{{ client.nbravertissement }}</td>
            </tr>
            <tr>
                <th>Ban</th>
                <td>{{ client.ban }}</td>
            </tr>
            <tr>
                <th>Datedebutblock</th>
                <td>{{ client.datedebutblock ? client.datedebutblock|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datefinblock</th>
                <td>{{ client.datefinblock ? client.datefinblock|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_client_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_client_edit', {'idclient': client.idclient}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
